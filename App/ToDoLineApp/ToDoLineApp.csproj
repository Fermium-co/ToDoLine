<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<ResizetizerIncludeSelfProject>True</ResizetizerIncludeSelfProject>
		<ProduceReferenceAssembly>true</ProduceReferenceAssembly>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Bit.Client.Xamarin.Prism" Version="6.8.7" />
		<PackageReference Include="Bit.Tooling.CodeAnalyzer" Version="6.8.7" />
		<PackageReference Include="Bit.Universal.Model" Version="6.8.7" />
		<PackageReference Include="Fody" Version="6.3.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
		</PackageReference>
		<PackageReference Include="PropertyChanged.Fody" Version="3.3.1" />

		<PackageReference Include="Acr.UserDialogs" Version="7.1.0.470" />

		<PackageReference Include="Resizetizer.NT" Version="0.2.0" />

		<PackageReference Include="Syncfusion.Xamarin.Buttons" Version="18.4.0.34" />
		<PackageReference Include="Syncfusion.Xamarin.SfBadgeView" Version="18.4.0.34" />
		<PackageReference Include="Syncfusion.Xamarin.SfListView" Version="18.4.0.34" />
		<PackageReference Include="Xamarin.Forms" Version="5.0.0.1874" />
		<PackageReference Include="Bit.Universal.OData" Version="6.8.7" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="**\*.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>$([System.String]::Copy('%(Filename)').Replace('.Designer','')).resx</DependentUpon>
		</Compile>
		<EmbeddedResource Update="**\*.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
			<LastGenOutput>%(Filename).Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

	<Import Project="..\..\Shared\ToDoLine.Dto\ToDoLine.Dto.projitems" Label="Shared" />

	<ItemGroup>
		<SharedImage Include="Assets\Images\day.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\list.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\planned.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\search.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\star.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\task.png" BaseSize="19" />
		<SharedImage Include="Assets\Images\down_arrow.png" BaseSize="13" />
		<SharedImage Include="Assets\Images\to_do_line.png" BaseSize="147,41" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Resources\Strings\Strings.Designer.cs">
	    <DesignTime>True</DesignTime>
	  </Compile>
	</ItemGroup>

</Project>
