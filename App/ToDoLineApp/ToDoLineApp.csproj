<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BitCodeAnalyzer" Version="2.2.0" />
    <PackageReference Include="Fody" Version="5.0.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="PropertyChanged.Fody" Version="3.0.0" />

    <PackageReference Include="Acr.UserDialogs" Version="7.0.4" />

    <PackageReference Include="Syncfusion.Xamarin.Buttons" Version="17.1.0.42" />
    <PackageReference Include="Syncfusion.Xamarin.Core" Version="17.1.0.42" />
    <PackageReference Include="Syncfusion.Xamarin.SfBadgeView" Version="17.1.0.42" />
    <PackageReference Include="Syncfusion.Xamarin.SfListView" Version="17.1.0.42" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
    <PackageReference Include="Xamarin.FFImageLoading.Forms" Version="2.4.5.922" />
    <PackageReference Include="Xamarin.Forms" Version="3.6.0.344457" />
    <PackageReference Include="Bit.CSharpClient.OData" Version="2.2.0" />

    <PackageReference Include="Xamarin.LiveReload" Version="0.3.27" Condition=" '$(Configuration)' == 'Debug' " />
    <PackageReference Include="LiveXAML" Version="2.1.72" Condition=" '$(Configuration)' == 'Debug' " />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Strings\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Strings\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Images\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ToDoLine\ToDoLine.csproj" ExcludeAssets="all">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <Import Project="..\..\Shared\ToDoLine.Dto\ToDoLine.Dto.projitems" Label="Shared" />
</Project>
